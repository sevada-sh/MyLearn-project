<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/images/static/logo.svg">

</head>
<body dir="rtl" class="text-nowrap">
    @*    <div class="preloader d-flex justify-content-center align-items-center">
    <img src="/images/static/loader.gif" alt="preloader">
    </div>*@
    <div class="bg-dark">
        <header class="container">
            <div class="row">
                <a class="link-light" href="/">پنل ادمین</a>
            </div>
        </header>
    </div>
    <div class="row">
        <nav class="col-2">
            <ul class="text-start list-group text-center">
                <li class="list-group-item list-group-item-action bg-light border-0">
                    <a class="text-decoration-none link-dark btn" asp-page="Index">
                        خانه
                    </a>
                </li>
                <li class="list-group-item list-group-item bg-light border-0">
                    <a class="text-decoration-none link-dark btn" asp-page="ShowCourses">
                        مدیریت محصولات
                    </a>
                </li>
                <li class="list-group-item list-group-item bg-light border-0">
                    <a class="text-decoration-none link-dark btn" asp-page="ShowAccounts">
                        مدیریت کاربران
                    </a>
                </li>
                <li class="list-group-item list-group-item bg-light border-0">
                    <a class="text-decoration-none link-dark btn" asp-page="ShowArticles">
                        مدیریت مقالات
                    </a>
                </li>
            </ul>
        </nav>
        <main class="container col-10">
            @RenderBody()
        </main>
    </div>
</body>
</html>
