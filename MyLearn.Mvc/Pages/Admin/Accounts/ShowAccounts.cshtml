@page
@model MyLearn.Mvc.Pages.Admin.Accounts.ShowAccountsModel
@{
}

<a class="btn btn-success" asp-page="AddAccount">اضافه کردن کاربر</a>
<div class="container">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">عکس</th>
                    <th scope="col">نام کاربری</th>
                    <th scope="col">ایمیل</th>
                    <th scope="col">رمز عبور</th>
                    <th scope="col">ادمین</th>
                    <th scope="col">استاد</th>
                    <th scope="col">نویسنده</th>
                    <th scope="col">دستورات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Accounts)
                {
                    <tr>
                        <th scope="row">@item.UserId</th>
                        <th>
                            <img src="/images/Account/@(item.UserId).jpg" alt="CourseImg" style="max-width:200px;border:1px solid gray;padding:3px">
                        </th>
                        <th>@item.UserName</th>
                        <th>@item.Email</th>
                        <th>@item.Password</th>
                        <th>@item.IsAdmin</th>
                        <th>@item.IsTeacher</th>
                        <th>@item.IsWriter</th>
                        <th>
                            <a asp-page="EditAccount" class="btn btn-warning text-white">ویرایش</a>
                            <a asp-page="ِDeleteAccount" class="btn btn-danger">حذف</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>