    <span asp-validation-for="Course.CourseVideosCount"></span>
    <br />
    <label asp-for="Course.CourseLevel"></label>
    <input asp-for="Course.CourseLevel" class="form-control" />
    <span asp-validation-for="Course.CourseLevel"></span>
    <br />
    <label asp-for="Course.CourseIsHolding"></label>
    <input type="checkbox" asp-for="Course.CourseIsHolding" class="form-control" />
    <span asp-validation-for="Course.CourseIsHolding"></span>
